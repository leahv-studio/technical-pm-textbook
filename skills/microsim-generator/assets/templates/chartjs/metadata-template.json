{
    "$schema": "../shared/microsim-metadata-schema.json",
    "microsim": {
        "dublinCore": {
            "title": "{{TITLE}}",
            "creator": ["{{CREATOR}}"],
            "subject": ["{{SUBJECT_1}}", "{{SUBJECT_2}}"],
            "description": "{{DESCRIPTION}}",
            "publisher": "{{PUBLISHER}}",
            "date": "{{DATE}}",
            "type": "Educational MicroSim",
            "format": "text/html",
            "language": "en",
            "rights": "CC BY 4.0"
        },
        "search": {
            "tags": ["{{TAG_1}}", "{{TAG_2}}", "{{TAG_3}}"],
            "searchKeywords": ["{{KEYWORD_1}}", "{{KEYWORD_2}}"],
            "visualizationType": ["chart", "data-visualization"],
            "interactionLevel": "moderate",
            "complexity": 3,
            "relatedConcepts": ["{{CONCEPT_1}}", "{{CONCEPT_2}}"],
            "applicationDomains": ["education", "demonstration"]
        },
        "educational": {
            "gradeLevel": ["{{GRADE_LEVEL}}"],
            "subjectArea": ["{{SUBJECT_AREA}}"],
            "topic": ["{{TOPIC_1}}", "{{TOPIC_2}}"],
            "learningObjectives": [
                "{{LEARNING_OBJECTIVE_1}}",
                "{{LEARNING_OBJECTIVE_2}}"
            ],
            "bloomsTaxonomy": ["Understand", "Analyze"],
            "prerequisites": [],
            "duration": {
                "typical": 5,
                "range": {"min": 2, "max": 10}
            },
            "difficulty": "Beginner"
        },
        "technical": {
            "framework": "vanilla-js",
            "version": "1.0.0",
            "canvasDimensions": {
                "width": 700,
                "height": 450,
                "responsive": true
            },
            "dependencies": [
                "chart.js@4.4.0",
                "chartjs-plugin-datalabels@2"
            ],
            "browserCompatibility": ["Chrome 90+", "Firefox 88+", "Safari 14+", "Edge 90+"],
            "performance": {
                "memoryUsage": "low",
                "loadTime": 500
            },
            "deviceRequirements": {
                "minScreenWidth": 320,
                "touchSupport": false,
                "keyboardRequired": false,
                "mouseRequired": true,
                "networkRequired": true
            },
            "accessibility": {
                "screenReader": false,
                "keyboardNavigation": true,
                "colorContrast": true,
                "altText": false
            }
        },
        "userInterface": {
            "layoutType": "responsive-width",
            "layoutPattern": "tabs-with-chart-views",
            "colorScheme": {
                "drawingArea": "aliceblue",
                "controlArea": "#e9ecef",
                "accent": "#4a90d9",
                "text": "#333"
            },
            "controls": [
                {
                    "id": "tab-pie",
                    "type": "button",
                    "label": "Pie Chart",
                    "description": "Switch to pie chart view"
                },
                {
                    "id": "tab-bar",
                    "type": "button",
                    "label": "Bar Chart",
                    "description": "Switch to bar chart view"
                },
                {
                    "id": "tab-table",
                    "type": "button",
                    "label": "Table",
                    "description": "Switch to table view"
                }
            ],
            "visualElements": [
                {
                    "type": "chart",
                    "description": "Pie chart showing proportional distribution",
                    "interactive": true
                },
                {
                    "type": "chart",
                    "description": "Bar chart comparing values",
                    "interactive": true
                },
                {
                    "type": "text-display",
                    "description": "Data table with exact values",
                    "interactive": false
                }
            ]
        }
    }
}
