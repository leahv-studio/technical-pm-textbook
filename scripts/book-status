#!/usr/bin/env bash
#
# book-status - Display the status of the intelligent textbook building workflow
#
# This script calls the Python analysis program to check the status of various
# components in the book building process.

# Find the book-status.py script
# First check if we're in a book project directory
if [ -f "src/site-metrics/book-status.py" ]; then
    SCRIPT_PATH="src/site-metrics/book-status.py"
elif [ -f "$HOME/Documents/ws/modeling-healthcare-data/src/site-metrics/book-status.py" ]; then
    SCRIPT_PATH="$HOME/Documents/ws/modeling-healthcare-data/src/site-metrics/book-status.py"
else
    echo "Error: Could not find book-status.py"
    echo "Please run this command from within your book project directory"
    echo "or ensure the script exists at: $HOME/Documents/ws/modeling-healthcare-data/src/site-metrics/book-status.py"
    exit 1
fi

# Execute the Python script
python3 "$SCRIPT_PATH"
